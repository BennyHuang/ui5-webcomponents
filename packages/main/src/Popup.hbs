<div class="ui5-popup-root" role="dialog" aria-modal="true" aria-labelledby="ui5-popup-header">

	<span class="first-fe" tabindex="0" @focusin={{forwardToLast}}></span>

	{{> beginStaticContent}}

	{{#if header.length }}
		<div class="ui5-popup-header-root"  id="ui5-popup-header" role="toolbar">
			<slot name="header"></slot>
		</div>
	{{else}}
		<h2 class="ui5-popup-header-text" id="ui5-popup-header">{{headerText}}</h2>
	{{/if}}

	<div class="ui5-popup-content">
		<slot></slot>
	</div>

	{{#if footer.length }}
		<div class="ui5-popup-footer-root" role="toolbar">
			<slot name="footer"></slot>
		</div>
	{{/if}}

	<span class="last-fe" tabindex="0" @focusin={{forwardToFirst}}></span>
</div>

{{#*inline "beginStaticContent"}}{{/inline}}