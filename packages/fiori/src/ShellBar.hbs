<div class="ui5-shellbar-root" dir="{{rtl}}">
	<div class="ui5-shellbar-overflow-container ui5-shellbar-overflow-container-left">

		{{#if startButton.length}}
			<slot name="startButton"></slot>
		{{/if}}

		{{#if showStandaloneLogo}}
			<img class="ui5-shellbar-logo" src="{{logo}}" @click="{{_logoPress}}" />
		{{/if}}

		{{#if hasMenuItems}}
			<ui5-button class="ui5-shellbar-logo-button ui5-shellbar-button" @click="{{_titlePress}}">

				{{#if combineLogo}}
					<img class="ui5-shellbar-logo" src="{{logo}}" />
				{{/if}}

				{{> title}}

				<span class="ui5-shellbar-menu-button-arrow"></span>
			</ui5-button>

		{{else}}
			{{> title}}
		{{/if}}

		<h2 class="ui5-shellbar-secondary-title">{{secondaryTitle}}</h2>

		<ui5-popover class="ui5-shellbar-menu-popover" placement-type="Bottom">
			<ui5-list separators="None" mode="SingleSelect" @ui5-itemPress={{_menuItemPress}}>
				<slot name="menuItems"></slot>
			</ui5-list>
		</ui5-popover>
	</div>

	<div class="ui5-shellbar-overflow-container ui5-shellbar-overflow-container-middle">
		{{#if showCoPilot}}
			{{> coPilot}}
		{{else}}
			<span class="ui5-shellbar-co-pilot-placeholder"></span>
		{{/if}}
	</div>

	<div class="ui5-shellbar-overflow-container ui5-shellbar-overflow-container-right">
		<div class="ui5-shellbar-overflow-container-right-child">
			{{#if searchField.length}}
				<ui5-button 
					class="ui5-shellbar-button ui5-shellbar-search-button"
					icon="sap-icon://search"
					data-ui5-text="Search"
					@click={{_actionPress}}
				>
				</ui5-button>
			{{/if}}

			{{#each items}}
				<ui5-button
					class="ui5-shellbar-button ui5-shellbar-custom-item"
					icon={{this.src}}
					data-ui5-shellbar-item-button
					.mappedShellBarItem={{this}}
					@click={{../_actionPress}}
				>
				</ui5-button>
			{{/each}}

			{{#if showNotifications}}
				<ui5-button 
					class="ui5-shellbar-button ui5-shellbar-notifications-button"
					icon="sap-icon://bell"
					data-ui5-text="Notifications"
					data-ui5-notification-count="{{notificationCount}}"
					@click={{_actionPress}}
				>
				</ui5-button>
			{{/if}}

			<ui5-button 
				class="ui5-shellbar-button ui5-shellbar-overflow-button"
				icon="sap-icon://overflow"
				@click="{{_toggleActionPopover}}"
			>
			</ui5-button>

			{{#if profile}}
			<ui5-button @click={{_actionPress}} class="ui5-shellbar-button ui5-shellbar-image-button">
				<span style="{{styles.profile}}" class="ui5-shellbar-image-button-inner"></span>
			</ui5-button>
			{{/if}}

			{{#if showProductSwitch}}
				<ui5-button
					class="ui5-shellbar-button ui5-shellbar-button-product-switch"
					icon="sap-icon://grid"
					data-ui5-text="Product Switch"
					@click={{_actionPress}}
				>
				</ui5-button>
			{{/if}}

		</div>
	</div>

	<ui5-popover class="ui5-shellbar-overflow-popover" placement-type="Bottom"
		horizontal-align="{{popoverHorizontalAlign}}" no-arrow>
		<ui5-list separators="None" @ui5-itemPress="{{_overflowItemPress}}">

			{{#each _hiddenIcons}}
				<ui5-li icon="{{this.icon}}" type="Active" class="ui5-shellbar-overflow-list-item" .button="{{this.item}}">
					{{this.text}}
				</ui5-li>
			{{/each}}

		</ui5-list>
	</ui5-popover>


	<ui5-popover 
		class="ui5-shellbar-search-popover"
		@ui5-afterOpen={{_toggleSearchIconActiveState}}
		@ui5-afterClose={{_toggleSearchIconActiveState}}
		placement-type="Left"
		no-content-padding
		no-arrow
	>
		{{#if searchField.length}}
			<slot name="searchField"></slot>
		{{/if}}
	</ui5-popover>
</div>


{{#*inline "title"}}
	{{#if primaryTitle}}
		<h1 class="ui5-shellbar-menu-button-title">
			<bdi>{{primaryTitle}}</bdi>
		</h1>
	{{/if}}
{{/inline}}

{{#*inline "coPilot"}}
